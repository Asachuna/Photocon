<div class= "d-flex justify-content-center my-5">
    <%= render 'layouts/user_icon', { user: user, size: 60 } %>
    <h1 class="mt-3 mt-md-2 ms-3"><%= user.name %></h1>
    
    <% if current_user == user %>
      <a href="<%= edit_user_path(user) %>">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-pen-fill ms-2 mt-3 text-gray2" viewBox="0 0 16 16">
          <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
        </svg>
      </a>
    <% end %>
</div>

<!-- 大画面（PC） -->
<div class="d-none d-md-block">
  <ul class="nav nav-tabs nav-justified mb-5">
    <li class="nav-item"><a href="<%= user_path(user) %>" class="nav-link small <%= 'active' if current_page?(user_path(user)) %>">プロフィール</a></li>
    <li class="nav-item"><a href="<%= photos_user_path(user) %>" class="nav-link small <%= 'active' if current_page?(photos_user_path(user)) %>">投稿作品</a></li>
    <li class="nav-item"><a href="<%= contests_user_path(user) %>" class="nav-link small <%= 'active' if current_page?(contests_user_path(user)) %>">コンテスト</a></li>
    <li class="nav-item"><a href="<%= likes_user_path(user) %>" class="nav-link small <%= 'active' if current_page?(likes_user_path(user)) %>">いいね</a></li>
  </ul>
</div>

<!-- 小画面（スマホ） -->
<div class="d-block d-md-none">
  <ul class="nav nav-tabs nav-justified mb-3">
    <li class="nav-item"><a href="<%= user_path(user) %>" class="nav-link small <%= 'active' if current_page?(user_path(user)) %>"><img class="img-fluid" src="<%= image_path("person#{"-fill" if current_page?(user_path(user))}.svg") %>" alt="" width="32" height="32"></a></li>
    <li class="nav-item"><a href="<%= photos_user_path(user) %>" class="nav-link small <%= 'active' if current_page?(photos_user_path(user)) %>"><img class="img-fluid" src="<%= image_path("camera#{"-fill" if current_page?(photos_user_path(user))}.svg") %>" alt="" width="32" height="32"></a></li>
    <li class="nav-item"><a href="<%= contests_user_path(user) %>" class="nav-link small <%= 'active' if current_page?(contests_user_path(user)) %>"><img class="img-fluid" src="<%= image_path("trophy#{"-fill" if current_page?(contests_user_path(user))}.svg") %>" alt="" width="32" height="32"></a></li>
    <li class="nav-item"><a href="<%= likes_user_path(user) %>" class="nav-link small <%= 'active' if current_page?(likes_user_path(user)) %>"><img class="img-fluid" src="<%= image_path("heart#{"-fill" if current_page?(likes_user_path(user))}.svg") %>" alt="" width="32" height="32"></a></li>
  </ul>
</div>