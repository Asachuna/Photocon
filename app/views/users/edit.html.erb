<div class="mb-3">
    
    <h1 class="ps-3 pb-4 mt-3">プロフィールを編集</h1>
    
    <div class= "d-flex justify-content-center my-5">
    <%= render 'layouts/user_icon', { user: @user, size: 60 } %>
    <h1 class="mt-3 mt-md-2 ms-3"><%= @user.name %></h1>
    </div>
    
    <div class="row">
        <%= form_with(model: @user) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            <div class="col-sm-6 offset-sm-3 col-10 offset-1">
                
                <div class="mb-5">
                    <div class="mb-1"><%= f.label :icon, 'アイコンのアップロード'%></div>
                    <%= f.file_field :icon, class: "form-control" %>
                </div>
                
                <div class="mb-5">
                    <%= f.label :name, 'ユーザー名' %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
        
                <div class="mb-5">
                    <%= f.label :profile, '自己紹介' %>
                    <%= f.text_area :profile, class: 'form-control', rows: "6" %>
                </div>
            </div>
            
            
            <div class="col-10 offset-1 col-sm-8 offset-sm-2">
                <%= f.submit 'プロフィールを更新する', class: 'btn btn-main btn-lg w-100 fw_bold' %>
            </div>
        <% end %>
    </div>
</div>
