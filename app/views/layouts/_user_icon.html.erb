<% if user.icon.present? %>
    <%= link_to image_tag(user.icon.url, class: "rounded-circle me-1 border", :alt => "", :width =>"#{size}", :height => "#{size}"), user %>
<% else %>
    <%= link_to image_tag("user-default.svg", class: "rounded-circle me-1 border", :alt => "", :width =>"#{size}", :height => "#{size}"), user %>
<% end %>