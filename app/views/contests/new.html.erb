<div class="mb-3">
    
    <h1 class="ps-3 pb-4 mt-3">コンテストを新規作成</h1>
    
    <div class="row">
        <%= form_with(model: @contest) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            <div class="col-md-8 offset-md-2 col-10 offset-1">
                <div class="mb-4">
                    <%= f.label :name, 'コンテスト名' %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
        
                <div class="mb-4">
                    <%= f.label :description, '概要' %>
                    <%= f.text_area :description, class: 'form-control', rows: "4" %>
                </div>

                <div class="mb-5">
                    <%= f.label :closing_day, '期間' %>
                    <div class="row">
                        <div class="col-4 col-md-3">
                            <%= f.telephone_field :closing_day, class: 'form-control' %>
                        </div>
                        
                        <div class="col mt-1">日間</div>
                    </div>
                </div>
                
                <%= f.submit 'コンテストを作成する', class: 'btn btn-main btn-lg w-100 fw-bold' %>
                
            </div>
            
            
        <% end %>
    </div>
</div>
